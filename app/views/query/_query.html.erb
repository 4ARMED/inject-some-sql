<div class="querybox" >
  <%= form_tag "/query/#{query[:action]}" do %>
    <h3><%= query[:name] || query[:action] %></h3>

    <% query[:input].each do |input| %>
      <%= label_tag input[:name] %>
      <%= text_field_tag input[:name], input[:example] %>
    <% end %>

    <%= submit_tag "Run!" %>
  <% end %>
</div>
